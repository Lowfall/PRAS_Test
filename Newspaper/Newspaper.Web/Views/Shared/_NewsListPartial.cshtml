@using System.Globalization
@using Newspaper.Domain.Enums
@model List<Newspaper.Web.Models.Home.NewsViewModel>


@{
    var culture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    
    var language = culture switch
    {
        "ru" => Languages.Russian,
        "en" => Languages.English,
        _ => Languages.Russian
    };
    
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                @{
                    if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <button onclick="deleteNews(@item.Id)"
                                class="btn btn-danger position-absolute top-0 end-0 m-2 d-flex justify-content-center align-items-center delete-btn">
                            <span class="fw-bold text-black">X</span>
                        </button>
                    }
                }
              
                <a asp-controller="News" asp-action="Article" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                    <img src="@item.ImageUrl" class="card-img-top" alt="News Image"/>
                    <div class="card-body d-flex flex-column">
                        <small class="text-muted mb-2">@item.CreatedAt.ToString("dd MMM yyyy")</small>

                        @{
                            var translation = item.Translations.FirstOrDefault(t => t.Language == language);
                        }
                        <div>
                            <h5 class="card-title text-truncate">@translation?.Title</h5>
                        </div>

                        <h6 class="card-subtitle mb-2 text-muted text-truncate">@translation?.Subtitle</h6>

                        <p class="card-text text-truncate">@translation?.Content</p>
                    </div>
                </a>
            </div>
           
        </div>
    }
</div>

<script>
    async function deleteNews(id) {
        await fetch(`/News/Delete?newsId=${id}`, {
            method: 'DELETE',
        });
        
        location.reload();
    }
</script>